{
    "manifest_version": 2,
    "name": "NoteIT",
    "description": "Easy way to jot down your ideas.",
    "permissions": ["activeTab", "storage"],
    
    "version": "4.0.0",
    "icons": {
        "128": "icon_128.png",
        "48": "icon_48.png",
        "16": "icon_16.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background":{
        "scripts": ["background.js"]
    }
}